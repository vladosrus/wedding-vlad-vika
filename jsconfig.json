{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "assets": ["src/assets"],
      "constants": ["src/constants"],
      "components": ["src/components"]
    },
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
